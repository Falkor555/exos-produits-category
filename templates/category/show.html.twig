{% extends 'base.html.twig' %}

{% block title %}{{ category.nom }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-folder-fill text-primary"></i> {{ category.nom }}</h1>
                <a href="{{ path('app_category_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 fw-bold text-muted">Nom :</div>
                        <div class="col-md-9">{{ category.nom }}</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-3 fw-bold text-muted">Description :</div>
                        <div class="col-md-9">{{ category.description ?? 'Aucune description' }}</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-3 fw-bold text-muted">Produits :</div>
                        <div class="col-md-9">
                        <span class="badge bg-secondary badge-custom">
                            {{ category.produits|length }} produit(s)
                        </span>
                        </div>
                    </div>
                </div>
            </div>

            {% if category.produits is not empty %}
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="bi bi-box"></i> Produits associés</h5>
                    </div>
                    <div class="card-body">
                        <div class="row row-cols-1 row-cols-md-2 g-3">
                            {% for produit in category.produits %}
                                <div class="col">
                                    <div class="card h-100 border">
                                        <div class="card-body">
                                            <h6 class="card-title">{{ produit.nom }}</h6>
                                            <p class="text-primary fw-bold mb-0">{{ produit.prix }} €</p>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Voir
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="d-flex gap-2">
                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                {{ include('category/delete.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

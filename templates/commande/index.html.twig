{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des commandes</h1>

    {% if commandes is empty %}
        <div class="alert alert-info">
            Aucune commande pour le moment.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for commande in commandes %}
                    <tr>
                        <td>{{ commande.id }}</td>
                        <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                        <td>{{ commande.total }} €</td>
                        <td>
                            <span class="badge bg-success">{{ commande.statut }}</span>
                        </td>
                        <td>
                            <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-sm btn-primary">
                                Voir détails
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="{{ path('app_produit_catalogue') }}" class="btn btn-primary">Retour au catalogue</a>
    </div>
{% endblock %}

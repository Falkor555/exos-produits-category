{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
    <h1 class="mb-4"><i class="bi bi-shop"></i> Notre catalogue</h1>

    {% if produits.items is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun produit disponible pour le moment.
        </div>
    {% else %}
        <div class="mb-3">
            <p class="text-muted">
                {{ produits.totalItemCount }} produit(s) disponible(s)
            </p>
        </div>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            {% for produit in produits %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ produit.nom }}</h5>
                            <p class="card-text text-muted small">
                                {{ produit.description|default('Aucune description')|slice(0, 60) }}...
                            </p>
                            <p class="h5 text-success">{{ produit.prix }} €</p>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-between gap-2">
                                <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Détails
                                </a>
                                <a href="{{ path('app_panier_add', {'id': produit.id}) }}" class="btn btn-sm btn-success">
                                    <i class="bi bi-cart-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination #}
        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(produits) }}
        </div>
    {% endif %}
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-cart3 text-primary"></i> Mon panier</h1>
        <a href="{{ path('app_catalogue') }}" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Continuer mes achats
        </a>
    </div>

    {% if items is empty %}
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3 text-muted">Votre panier est vide</h3>
                <p class="text-muted">Découvrez nos produits et ajoutez-les à votre panier !</p>
                <a href="{{ path('app_catalogue') }}" class="btn btn-primary mt-3">
                    <i class="bi bi-shop"></i> Découvrir le catalogue
                </a>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul"></i> Articles ({{ items|length }})
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-center">Prix unitaire</th>
                                    <th class="text-center">Quantité</th>
                                    <th class="text-end">Sous-total</th>
                                    <th class="text-center">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in items %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-box-seam text-primary me-2" style="font-size: 1.5rem;"></i>
                                                <div>
                                                    <a href="{{ path('app_produit_show', {'id': item.produit.id}) }}" class="text-decoration-none fw-bold">
                                                        {{ item.produit.nom }}
                                                    </a>
                                                    {% if item.produit.category %}
                                                        <br>
                                                        <small class="text-muted">
                                                            <i class="bi bi-folder"></i> {{ item.produit.category.nom }}
                                                        </small>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="text-primary fw-bold">{{ item.produit.prix }} €</span>
                                        </td>
                                        <td class="text-center align-middle">
                                                <span class="badge bg-secondary badge-custom">
                                                    <i class="bi bi-hash"></i> {{ item.quantite }}
                                                </span>
                                        </td>
                                        <td class="text-end align-middle">
                                                <span class="fw-bold text-success">
                                                    {{ (item.produit.prix * item.quantite)|number_format(2, '.', '') }} €
                                                </span>
                                        </td>
                                        <td class="text-center align-middle">
                                            <a href="{{ path('app_panier_remove', {'id': item.produit.id}) }}"
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Êtes-vous sûr de vouloir retirer ce produit ?')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 1rem;">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-calculator"></i> Récapitulatif
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Articles :</span>
                            <span class="fw-bold">{{ items|length }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Sous-total :</span>
                            <span class="fw-bold">{{ total|number_format(2, '.', '') }} €</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 mb-0">Total :</span>
                            <span class="h4 mb-0 text-success">{{ total|number_format(2, '.', '') }} €</span>
                        </div>

                        <a href="{{ path('app_panier_valider') }}" class="btn btn-success w-100 mb-2">
                            <i class="bi bi-check-circle"></i> Valider ma commande
                        </a>
                        <a href="{{ path('app_catalogue') }}" class="btn btn-outline-primary w-100 mb-2">
                            <i class="bi bi-cart-plus"></i> Continuer mes achats
                        </a>
                        <a href="{{ path('app_panier_clear') }}"
                           class="btn btn-outline-danger w-100"
                           onclick="return confirm('Êtes-vous sûr de vouloir vider le panier ?')">
                            <i class="bi bi-trash"></i> Vider le panier
                        </a>
                    </div>
                    <div class="card-footer bg-light text-center">
                        <small class="text-muted">
                            <i class="bi bi-shield-check"></i> Paiement sécurisé
                        </small>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

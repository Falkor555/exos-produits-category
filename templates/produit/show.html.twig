{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-box-seam text-primary"></i> {{ produit.nom }}</h1>
                <a href="{{ path('app_produit') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations du produit</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold text-muted">Nom :</div>
                        <div class="col-md-9">{{ produit.nom }}</div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold text-muted">Description :</div>
                        <div class="col-md-9">{{ produit.description ?? 'Aucune description' }}</div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold text-muted">Prix :</div>
                        <div class="col-md-9">
                            <span class="h3 text-primary">{{ produit.prix }} €</span>
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold text-muted">Statut :</div>
                        <div class="col-md-9">
                            {% if produit.isActive %}
                                <span class="badge bg-success badge-custom">
                                    <i class="bi bi-check-circle"></i> Actif
                                </span>
                            {% else %}
                                <span class="badge bg-danger badge-custom">
                                    <i class="bi bi-x-circle"></i> Inactif
                                </span>
                            {% endif %}
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold text-muted">Date de création :</div>
                        <div class="col-md-9">{{ produit.dateCreation|date('d/m/Y à H:i') }}</div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold text-muted">Catégorie :</div>
                        <div class="col-md-9">
                            {% if produit.category %}
                                <a href="{{ path('app_category_show', {'id': produit.category.id}) }}"
                                   class="badge bg-info badge-custom text-decoration-none">
                                    <i class="bi bi-folder"></i> {{ produit.category.nom }}
                                </a>
                            {% else %}
                                <span class="text-muted">Non définie</span>
                            {% endif %}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-3 fw-bold text-muted">Tags :</div>
                        <div class="col-md-9">
                            {% if produit.tags is empty %}
                                <span class="text-muted">Aucun tag</span>
                            {% else %}
                                <div class="d-flex flex-wrap gap-2">
                                    {% for tag in produit.tags %}
                                        <a href="{{ path('app_tag_show', {'id': tag.id}) }}"
                                           class="badge bg-secondary badge-custom text-decoration-none">
                                            <i class="bi bi-tag"></i> {{ tag.nom }}
                                        </a>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm bg-light mb-4">
                <div class="card-body text-center">
                    <h5 class="mb-3">
                        <i class="bi bi-cart-plus"></i> Ajouter au panier
                    </h5>
                    <a href="{{ path('app_panier_add', {'id': produit.id}) }}"
                       class="btn btn-success btn-lg">
                        <i class="bi bi-cart-plus"></i> Ajouter au panier
                    </a>
                    <a href="{{ path('app_catalogue') }}"
                       class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-arrow-left"></i> Retour au catalogue
                    </a>
                </div>
            </div>

            <div class="d-flex gap-2">
                <a href="{{ path('app_produit_edit', {'id': produit.id}) }}"
                   class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                {{ include('produit/delete.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

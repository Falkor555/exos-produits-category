{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-box text-primary"></i> Produits</h1>
        <a href="{{ path('app_produit_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau produit
        </a>
    </div>

    {% if produits|length == 0 %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun produit disponible. Créez-en un pour commencer !
        </div>
    {% else %}
        {# Informations de pagination #}
        <div class="mb-3">
            <p class="text-muted">
                Affichage de {{ produits|length }} produits 
                ({{ produits.getTotalItemCount }} au total)
            </p>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for produit in produits %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">
                                    <i class="bi bi-box-seam text-primary"></i> {{ produit.nom }}
                                </h5>
                                {% if produit.isActive %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Actif</span>
                                {% else %}
                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactif</span>
                                {% endif %}
                            </div>
                            <p class="card-text text-muted small">
                                {{ produit.description|default('Aucune description')|slice(0, 80) }}
                                {% if produit.description|length > 80 %}...{% endif %}
                            </p>
                            <div class="mb-3">
                                <span class="h4 text-primary">{{ produit.prix }} €</span>
                            </div>
                            <div class="d-flex flex-wrap gap-1 mb-2">
                                {% if produit.category %}
                                    <span class="badge bg-info">
                                        <i class="bi bi-folder"></i> {{ produit.category.nom }}
                                    </span>
                                {% endif %}
                                {% for tag in produit.tags %}
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-tag"></i> {{ tag.nom }}
                                    </span>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-between align-items-center gap-2">
                                <div class="btn-group">
                                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                                <a href="{{ path('app_panier_add', {'id': produit.id}) }}" class="btn btn-sm btn-success">
                                    <i class="bi bi-cart-plus"></i> Ajouter au panier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Navigation de pagination #}
        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(produits) }}
        </div>
    {% endif %}
{% endblock %}

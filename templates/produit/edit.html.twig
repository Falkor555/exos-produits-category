
{% extends 'base.html.twig' %}

{% block title %}Modifier produit{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Modifier le produit</h4>
                </div>
                <div class="card-body">
                    {{ include('produit/form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <a href="{{ path('app_produit_crud_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
                {{ include('produit/delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

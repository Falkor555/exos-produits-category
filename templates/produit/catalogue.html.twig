
{% extends 'base.html.twig' %}

{% block title %}Catalogue de produits{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-shop text-primary"></i> Catalogue</h1>
        <a href="{{ path('app_panier_index') }}" class="btn btn-outline-success">
            <i class="bi bi-cart3"></i> Voir le panier
        </a>
    </div>

    {% if produits is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun produit disponible pour le moment.
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for produit in produits %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">
                                    <i class="bi bi-box-seam text-primary"></i> {{ produit.nom }}
                                </h5>
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Disponible
                                </span>
                            </div>

                            <p class="card-text text-muted small">
                                {{ produit.description|default('Aucune description')|slice(0, 100) }}
                                {% if produit.description|length > 100 %}...{% endif %}
                            </p>

                            <div class="mb-3">
                                <span class="h3 text-primary">{{ produit.prix }} €</span>
                            </div>

                            <div class="d-flex flex-wrap gap-1 mb-3">
                                {% if produit.category %}
                                    <span class="badge bg-info badge-custom">
                                        <i class="bi bi-folder"></i> {{ produit.category.nom }}
                                    </span>
                                {% endif %}
                                {% for tag in produit.tags %}
                                    <span class="badge bg-secondary badge-custom">
                                        <i class="bi bi-tag"></i> {{ tag.nom }}
                                    </span>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-top">
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_produit_show', {'id': produit.id}) }}"
                                   class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-eye"></i> Détails
                                </a>
                                <a href="{{ path('app_panier_add', {'id': produit.id}) }}"
                                   class="btn btn-sm btn-success flex-fill">
                                    <i class="bi bi-cart-plus"></i> Ajouter
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
